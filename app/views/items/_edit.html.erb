<%= form_for(@item) do |f| %>

  <div id ="item_form">
    <table style="border:none;">
      <tr>
        <td><%= f.label :qty, "Qty" %></td>
        <td><%= f.text_field :qty %></td>
      </tr>
      <tr>
        <td><%= f.label :name, "Item" %></td>
        <td><%= f.text_field :name %>
        
      <tr>
        <td><%= f.label :description %></td>
        <td><%= f.text_field :description %></td>
      </tr>
      <tr>
        <td><%= f.label :unit_cost %></td>
        <td><%= f.text_field :unit_cost %></td>
      </tr>
      <tr>
        <td><%= f.label :unit_price %></td>
        <td><%= f.text_field :unit_price %></td>
      </tr>
      <tr>
        <td colspan="2"><%= f.submit "save", :class => "btn-success" %></td>
      </tr>
    </table>
  </div>
<% end %>

