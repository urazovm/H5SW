<style>
  #ui-datepicker-div, .ui-helper-clearfix{
    border: none;
    overflow: hidden;
  }
</style>

<%= render '/layouts/customer_with_action' %>

<% if params[:type] == "Job" %>
  <%= render '/layouts/tab_panel_for_job' %>
<% else %>
  <%= render  '/layouts/tab_panel_for_customer' %>
<% end %>

<ul class="nav nav-tabs" id="custom_tab">
  <li class=<%= params[:tab]=="tab1" ? 'active' : '' %> >
    <%= link_to "Custom Tab 1", customs_path(:type => params[:type], :tab => 'tab1') %>
  </li>
  <li class=<%= params[:tab]=="tab2" ? 'active' : '' %> >
    <%= link_to "Custom Tab 2", customs_path(:type => params[:type], :tab => 'tab2') %>
  </li>
  <li>
    <% tab = (params[:tab] ? params[:tab] : 'tab1') %>
    <%= link_to "Add Fields", new_custom_path(:tab => tab) %>
  </li>
</ul>

<%=  render :partial => 'customs', :locals => {:customs => @customs} %>