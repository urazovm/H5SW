<%= form_for @table_values,:url => update_table_custom_path(@custom_id),:method => 'PUT',:remote => true do |f| %>
  <%= text_field_tag :table_value, {}, :value => @table_values, :class => "txt#{params[:cus_id]}", :style => 'width:418px; height:12px;' %><br/>
  <%= f.submit "update", :class => "btn btn-small btn-primary" %>
  <%= link_to_function 'Cancel', "cancelTableUpdate('#{params[:cus_id]}')", :class => "btn btn-mini btn-primary", :style => "color:white;" %>
<% end %>

  <script>
  function cancelTableUpdate(id){
    $("#custom_field_updation_"+id).html('<%= escape_javascript render :partial => '/customs/replace_dropdown', :locals => {:custom => @custom} %>');
  }
</script>
