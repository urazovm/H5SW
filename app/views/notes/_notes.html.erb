<div id="comment">
  <h4>
    <span>Comment</span>
    <span id="close">X</span>
  </h4>
  <% notes.each do |note| %>
    <div id="box">
      <!-- image section -->
      <div id="image">
        <div id="img">
          <%= image_tag "user.png", :width => "50px", :height => "50px" %>
        </div>
        <div id="desc">
          <%= current_login.name %>
        </div>
      </div>

      <!-- notes section -->
      <div id="notes">
        <p style="font-weight: bold;">
          Note :
          <%= note.note_type %>
        </p>
        <p>
          <%= note.description %>
        </p>
      </div>

      <div id="created_at">
        <%= note.created_at %>
      </div>
    </div>
  <% end %>
  <div id="pagination">
    <%= will_paginate %>
  </div>
</div>