<ul class = "nav nav-tabs" id="job_tabs">
  <li class = <%= params[:controller] == "jobs" && (params[:action] == "new" || params[:action] == "edit")? 'active' : '' %> >
    <% if session[:job_id] %>
      <%= link_to "Job", edit_job_path(session[:job_id]), :title => "Job edit page" %>
    <% else %>
      <%= link_to "Job", new_job_path, :title => "Job new page"  %>
    <% end %>
  </li>

  <li class =" <%= params[:controller] == "notes" ? 'active' : ''  %> ">
    <%= link_to "Notes", notes_path(:type => "Job"), :title => "list job notes" %>
  </li>

  <li class = "<%= params[:controller] == "jobtimes" ? 'active' : '' %> ">
    <%= link_to "Times",  jobtimes_path%>
  </li>

  <li class="<%= params[:controller] == "inventories" ? 'active' : ''  %> " >
    <%= link_to "Items", inventories_path %>
  </li>

  <li class = <%= params[:controller] == "documents" ? 'active' : '' %> >
    <%= link_to "Documents", documents_path(:type => "Job"), :title => "list job documents" %>
  </li>

  <li class = <%= params[:controller] == "customs" ? 'active' : '' %> >
    <% tab = current_login.tabs.find_by_tab_type("Job") %>
    <% if tab.present? %>
      <%= link_to "Custom Fields", customs_path(:type => "Job", :tab => tab.id ), :title => "custom page" %>
    <% else %>
      <%= link_to "Custom Fields", new_tab_customs_path(:type=> "Job"), :title => "Create tabs for job" %>
    <% end %>
  </li>
</ul>

