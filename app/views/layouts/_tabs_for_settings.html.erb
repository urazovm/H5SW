<ul class="nav nav-tabs" id="myTab">
  <li class="<%= (params[:controller] == "settings" && params[:action] == "accounting") ? "active" : "" %>">
    <%= link_to "Accounting", accounting_settings_path, :title => "list accounting" %>
  </li>

  <li class=<%= params[:controller] == "users" ? 'active' : ''  %>>
    <%= link_to 'Users', users_path , :title => "list users" %>
  </li>

  <li class=<%= params[:controller] == "roles" ? 'active' : ''  %>>
    <%= link_to "Roles", roles_path, :title => "list roles" %>
  </li>

  <li class="<%= (params[:controller] == "customs" && (params[:action] == "new" || params[:action]=="new_tab") )? 'active' : '' %>" >
    <% tab = current_login.tabs.first %>
    <% if tab.present? %>
      <%= link_to "Custom Fields", new_custom_path(:tab => tab.id, :type => tab.tab_type), :title => "custom page" %>
    <% else %>
      <%= link_to "Custom Fields", new_tab_customs_path(:type=> "Customer"), :title => "Create Tabs" %>
    <% end %>
  </li>

  <li>
    <%=  link_to_function "Billing", "alert('coming soon!'); return false;", :title => "billing page" %>
  </li>

  <li class="<%= (params[:controller] == "items" && params[:action] == "index") ? 'active' : ''  %>" >
    <%=  link_to "Items", items_path %>
  </li>

</ul>

