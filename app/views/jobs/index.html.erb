<%= render '/layouts/customer_with_action' %>
<%= render '/layouts/tab_panel_for_customer' %>

<div>
  <%= form_tag :jobs, :method => 'get', :class => "form-search" do |f|  %>
    <div style="visibility: hidden;">
      <%= submit_tag "Search", :name => nil, :class => "btn btn-info", :visible => false %>
    </div>
    <%= text_field_tag :search, params[:search], :placeholder => "search by reference number", :class => "input-large search-query" %> &nbsp;
    &nbsp; &nbsp;
    <%= select_tag :my_job, options_for_select([['My Jobs', 'my_jobs']]) %>
  <% end %>
</div>


<table class="table">
  <table class="table table-striped">
    <tr>
      <th>Reference no</th>
      <th>Date</th>
      <th>Status</th>
      <th>Total</th>
      <th>Summary</th>
      <th colspan="3">Action</th>
    </tr>

    <% @jobs.each do |job| %>
      <tr class="<%= cycle('even', 'odd') %> ">
        <td><%= job.reference_no %></td>
        <td><%= job.due_date %></td>
        <td><%= job.status %></td>
        <td><%= job.sub_total %></td>
        <td><%= job.summary %></td>

        <td colspan="3">
          <%= link_to 'Edit', edit_job_path(job) %> |
          <%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </table>
  <tr>
    <td colspan="8">
      <%= will_paginate @jobs %>
    </td>
  </tr>
</table>
