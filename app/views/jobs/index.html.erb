<%= render '/layouts/customer_with_action' %>
<%= render '/layouts/tab_panel_for_customer' %>

<div>
  <%= form_tag :jobs, :method => 'get', :class => "form-search" do |f|  %>

    <%= text_field_tag :search, params[:search], :placeholder => "search by reference number", :class => "input-large search-query" %> &nbsp;

    <%= button_tag :button, :style => "height:40px; width: 80px;"%>
    &nbsp;&nbsp;
    <%= select_tag :my_job, options_for_select([['My Jobs', 'my_jobs']]) %>
  <% end %>
</div>


<table class="table">
  <table class="table table-striped">
    <tr>
      <th colspan="8">
        <%= link_to "Add New Job", new_job_path %>
      </th>
    </tr>
    <tr>
      <th>Reference no</th>
      <th>Date</th>
      <th>Status</th>
      <th>Summary</th>
      <th colspan="3">Action</th>
    </tr>

    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to  job.reference_no, edit_job_path(job) %></td>
        <td><%= job.due_date %></td>
        <td><%= job.status %></td>
        <td><%= job.summary %></td>

        <td colspan="3">
          <%= link_to "Delete", job, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td colspan="5">
        <%= will_paginate @jobs %>
      </td>
    </tr>
  </table>
</table>
