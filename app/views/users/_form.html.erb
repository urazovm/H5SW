<%= form_for(@user, :url => users_path,:remote => true) do |f| %>
  <table width="100%;">
    <tr>
      <td>
        <div id="error_explanation" style="display:none;">

        </div>
      </td>
    </tr>
    <tr>
      <td>
        Role <br/>
        <%# if current_company.roles.empty? %>
        <span style="color: red;">No Roles First create roles on role tab.</span>
        <%# else %>
          <%#= f.select :role_id, options_for_select(current_company.roles.map{|cr| [cr.role, cr.id]}) %>
        <%# end %>
      </td>
      <td>
        Name <br/>
        <%= f.text_field :name %>
      </td>
    </tr>
    <tr>
      <td>
        Accounting Type <br/>
        <%= f.select :accounting_type, ["Employee", "Vendor", "Customer"] %>
      </td>
      <td>
        Accounting Name <br/>
        <%= f.text_field :accounting_name %>
      </td>
    </tr>
    <tr>
      <td>
        Email <br/>
        <%= f.email_field :email %>
      </td>
      <td>
        <%= f.check_box :smo_user %> SMO User
      </td>
    </tr>
    <tr>
      <td>
        Language <br/>
        <%= f.text_field :language %>
      </td>
      <td>
        Time Zone <br/>
        <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones,{},:id=>"time-zone" %>
      </td>
    </tr>
    <tr>
      <td><%= f.submit "SAVE" %></td>
    </tr>
  </table>
<% end %>

<style>
  td, th {
    text-align: left;
  }
</style>