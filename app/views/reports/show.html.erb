<div style="font-weight: bold; font-size: 40px;text-align: center; font-family: Times new roman;">Work Order</div><br/>
<div id="customer">
  <span style="font-size :20px; font-weight:bold;">Customer</span><br/>
  <% @job.customer_id ? customer = Customer.find(@job.customer_id) : '' %>
  <%= customer ? customer.company_name : '-' %><br/>
  <%= customer ? customer.city : '-' %>,
  <%= customer ? customer.state : '-' %>,
  <%= customer ? customer.zip : '-' %>
</div><br/>

<% if @job.jobsite_id != 0 %>
  <% jobsite = Jobsite.find(@job.jobsite_id) %>
  <div id="jobsites">
    <span style="font-size :20px; font-weight:bold;">Jobsite</span><br/>
    <%= jobsite.name %><br/>
    <%= jobsite.city %>,
    <%= jobsite.state %>,
    <%= jobsite.zip %>
  </div>
<% end %>
  <br/>

  <div>
    <% Note.exists?(:notable_id => @notable_id) ? note = Note.where(:note_type => 'Service Request').find_all_by_notable_id(session[:job_id]) : "" %>
    <% if note.present? %>
      <p style="font-weight: bold; font-size: 20px;">Notes</p>
      <table class ="table table-striped">
        <tr>

          <th>Service Request Notes</th>
        </tr>
        <% note.each do |note| %>
          <tr>
            <td>* <%= note.description %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
    <% end %>


    <% Note.exists?(:notable_id => @notable_id) ? note = Note.where(:note_type => 'Service Performed').find_all_by_notable_id(session[:job_id]) : "" %>
    <% if note.present? %>
      <table class ="table table-striped">
        <tr>
          <th>Service Performed Notes</th>
        </tr>
        <% note.each do |note| %>
          <tr>
            <td>* <%= note.description %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
    <% end %>
  </div>
  <br/>
  <div>
    <% Inventory.exists?(:job_id => @job.id) ? inventory = Inventory.find_all_by_job_id(@job.id) : "" %>
    <% if inventory.present? %>
      <p style="font-weight: bold; font-size: 20px;">Items List</p>
      <table  class="table table-striped">
        <tr>
          <th>Item Name</th>
          <th>Description</th>
          <th>Unit Price</th>
          <th>Quantity</th>
        </tr>
        <% inventory.each do |inventory| %>
          <tr>
            <td><%= inventory.name %></td>
            <td><%= inventory.description %></td>
            <td><%= inventory.unit_price %></td>
            <td><%= inventory.qty %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
    <% end %>
  </div>

  <div>
    <% Jobtime.exists?(:job_id => @job.id) ? jobtime = Jobtime.find_all_by_job_id(@job.id) : "" %>
    <% if jobtime.present? %>
      <p style="font-weight: bold; font-size: 20px;">Time</p>
      <table  class ="table table-striped">
        <tr>
          <th>Type</th>
          <th>User</th>
        </tr>
        <% jobtime.each do |jobtime| %>
          <tr>
            <td><%= jobtime.timetype %></td>
            <td><%= jobtime.user %></td>
          </tr>
        <% end %>
      </table>
    <% else %>
    <% end %>
  </div>  

