<%= form_for inventory,:url => inventory_path(inventory),:method => 'PUT',:remote => true do |f| %>
  <%= f.text_field :qty,:style => 'width:98px;height:12px;' %><br/>
  <%= f.submit "update", :class => "btn btn-small btn-primary" %>
  <%= link_to_function 'Cancel',"cancel_update('#{inventory.id}','#{inventory.qty}')", :class => "btn btn-mini btn-primary" %>
<% end %>
