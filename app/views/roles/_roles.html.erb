<% unless roles.empty? %>
  <table class ="table table-striped">
    <tr>
      <th>Role</th>
      <th>Customer</th>
      <th>Jobs</th>
      <th>Jobtimes</th>
      <th>Contacts</th>
      <th>Reports</th>
      <th>Settings/Admin</th>
      <th>Options</th>
    </tr>

    <% roles.each do |role| %>
      <tr id="role_<%= role.id %>">
        <td><%= role.roll %></td>
        <td><%= role.customer %></td>
        <td><%= role.jobs %></td>
        <td><%= role.jobtimes %></td>
        <td><%= role.contacts %></td>
        <td><%= role.reports %></td>
        <td><%= role.settings_admin%> </td>
        <td>
          <%= link_to image_tag("edit.png", :title => "Edit", :width => "24px", :height => "24px"), edit_role_path(role), :remote => true %>
          |
          <%= link_to image_tag("delete.png", :title => "Delete", :width => "24px", :height => "24px"), role, method: :delete, data: { confirm: 'Are you sure?' }, remote: true %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
